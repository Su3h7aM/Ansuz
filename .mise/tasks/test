#!/usr/bin/env bash
#MISE description="Run Ansuz test suite"
#MISE alias="t"

set -euo pipefail

ROOT="$(pwd)"

echo "Running tests..."
echo "=== ansuz/color ===" && odin test "$ROOT/ansuz/color"
echo "=== ansuz/terminal ===" && odin test "$ROOT/ansuz/terminal"
echo "=== ansuz/buffer ===" && odin test "$ROOT/ansuz/buffer"
echo "=== ansuz/layout ===" && odin test "$ROOT/ansuz/layout"
echo "=== ansuz/core ===" && odin test "$ROOT/ansuz/core"
echo "All tests complete!"
